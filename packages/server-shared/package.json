{
    "name": "@chat-app/server-shared",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        },
        "./config": {
            "types": "./dist/config/index.d.ts",
            "import": "./dist/config/index.mjs",
            "require": "./dist/config/index.cjs"
        },
        "./auth": {
            "types": "./dist/auth/index.d.ts",
            "import": "./dist/auth/index.mjs",
            "require": "./dist/auth/index.cjs"
        },
        "./redis": {
            "types": "./dist/redis/index.d.ts",
            "import": "./dist/redis/index.mjs",
            "require": "./dist/redis/index.cjs"
        },
        "./utils": {
            "types": "./dist/utils/index.d.ts",
            "import": "./dist/utils/index.mjs",
            "require": "./dist/utils/index.cjs"
        }
    },
    "main": "./dist/index.cjs",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "tsup src/index.ts src/config/index.ts src/auth/index.ts src/redis/index.ts src/utils/index.ts --format cjs,esm --dts",
        "dev": "tsup src/index.ts src/config/index.ts src/auth/index.ts src/redis/index.ts src/utils/index.ts --format cjs,esm --dts --watch --no-clean",
        "lint": "eslint . --ext .ts,.tsx",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@chat-app/core": "workspace:*",
        "@chat-app/db": "workspace:*",
        "@socket.io/redis-adapter": "^8.3.0",
        "ioredis": "^5.6.0",
        "jose": "^6.0.11",
        "zod": "^4.0.10"
    },
    "devDependencies": {
        "@eslint/js": "^9.31.0",
        "@types/node": "^24.1.0",
        "@typescript-eslint/eslint-plugin": "^8.38.0",
        "@typescript-eslint/parser": "^8.38.0",
        "eslint": "^9.31.0",
        "tsup": "^8.5.0",
        "typescript": "^5.8.0"
    },
    "peerDependencies": {
        "typescript": ">=5.0.0"
    },
    "peerDependenciesMeta": {
        "typescript": {
            "optional": true
        }
    }
}
