{
    "name": "@chat-app/db",
    "version": "1.0.0",
    "private": true,
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "prisma": {
        "schema": "src/prisma/schema.prisma",
        "seed": "tsx src/prisma/seed.ts"
    },
    "scripts": {
        "build": "prisma generate && tsup src/index.ts --format cjs,esm --dts",
        "dev": "dotenvx run --env-file=../../.env -- tsup src/index.ts --format cjs,esm --dts --watch",
        "generate": "prisma generate",
        "migrate:dev": "prisma migrate dev",
        "studio": "dotenvx run --env-file=../../.env prisma studio",
        "validate": "prisma validate",
        "seed": "tsx src/prisma/seed.ts",
        "lint": "eslint .",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:studio": "prisma studio"
    },
    "dependencies": {
        "@prisma/client": "^6.12.0",
        "bcryptjs": "^3.0.0"
    },
    "devDependencies": {
        "@dotenvx/dotenvx": "^1.48.0",
        "@eslint/js": "^9.31.0",
        "@typescript-eslint/eslint-plugin": "^8.38.0",
        "@typescript-eslint/parser": "^8.38.0",
        "eslint": "^9.31.0",
        "prisma": "6.12.0",
        "tsup": "^8.5.0",
        "tsx": "^4.20.0",
        "typescript": "^5.8.0"
    }
}
