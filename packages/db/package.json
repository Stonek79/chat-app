{
    "name": "@chat-app/db",
    "version": "1.0.0",
    "private": true,
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "prisma": {
        "schema": "src/prisma/schema.prisma"
    },
    "scripts": {
        "build": "prisma generate && tsup src/index.ts --format cjs,esm --dts",
        "dev": "dotenvx run --env-file=../../.env.local tsup src/index.ts --format cjs,esm --dts --watch",
        "generate": "prisma generate",
        "migrate:dev": "prisma migrate dev",
        "studio": "dotenvx run --env-file=../../.env.local prisma studio",
        "validate": "prisma validate",
        "seed": "tsx src/prisma/seed.ts",
        "lint": "eslint .",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf dist",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:studio": "prisma studio"
    },
    "dependencies": {
        "@prisma/client": "6.8.2",
        "bcryptjs": "^2.4.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.30.1",
        "@types/bcryptjs": "^2.4.6",
        "@typescript-eslint/eslint-plugin": "^8.35.1",
        "@typescript-eslint/parser": "^8.35.1",
        "eslint": "^9.30.1",
        "prisma": "6.8.2",
        "tsup": "^8.5.0",
        "tsx": "^4.20.0",
        "typescript": "^5.8.3"
    }
}
