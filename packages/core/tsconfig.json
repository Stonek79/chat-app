{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "noEmit": false,
        "baseUrl": ".",
        "paths": {
            "@chat-app/db": ["../db/dist"],
            "@chat-app/db/*": ["../db/dist/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"],
    "references": [
        {
            "path": "../db"
        }
    ]
}
