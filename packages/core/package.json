{
    "name": "@chat-app/core",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "main": "./dist/index.cjs",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts --sourcemap && npm run build:edge-constants",
        "dev": "tsup src/index.ts src/types/index.ts src/schemas/index.ts src/constants/index.ts --format cjs,esm --dts --watch",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf dist && rm -rf ../constants-edge",
        "build:edge-constants": "tsx scripts/build-edge-constants.ts"
    },
    "dependencies": {
        "@chat-app/db": "workspace:*",
        "zod": "^3.25.7"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^8.15.0",
        "@typescript-eslint/parser": "^8.15.0",
        "eslint": "^9.30.0",
        "tsup": "^8.2.3",
        "tsx": "^4.20.3",
        "typescript": "^5.8.3"
    },
    "peerDependencies": {
        "typescript": ">=5.0.0"
    },
    "peerDependenciesMeta": {
        "typescript": {
            "optional": true
        }
    }
}
