{
    "name": "@chat-app/core",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "main": "./dist/index.cjs",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "rm -rf dist && tsup src/index.ts src/types/index.ts src/schemas/index.ts src/constants/index.ts --format cjs,esm --dts",
        "dev": "tsup src/index.ts src/types/index.ts src/schemas/index.ts src/constants/index.ts --format cjs,esm --dts --watch",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@chat-app/db": "workspace:*",
        "@paralleldrive/cuid2": "^2.2.2",
        "zod": "^4.0.10"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^8.38.0",
        "@typescript-eslint/parser": "^8.38.0",
        "eslint": "^9.31.0",
        "tsup": "^8.5.0",
        "tsx": "^4.20.0",
        "typescript": "^5.8.0"
    },
    "peerDependencies": {
        "typescript": ">=5.0.0",
        "react": ">=18.0.0",
        "swr": ">=2.0.0",
        "zod": ">=4.0.0"
    },
    "peerDependenciesMeta": {
        "typescript": {
            "optional": true
        }
    }
}
