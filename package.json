{
    "name": "chat-app-monorepo",
    "private": true,
    "packageManager": "pnpm@10.12.4",
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "format": "prettier --write '**/*.{ts,tsx,md}'",
        "clean": "turbo clean && rm -rf node_modules .turbo",
        "typecheck": "turbo typecheck",
        "db:generate": "turbo db:generate",
        "db:push": "turbo db:push",
        "db:studio": "pnpm --filter @chat-app/db db:studio",
        "install:all": "pnpm install",
        "build:packages": "turbo build --filter='./packages/*'",
        "dev:packages": "turbo dev --filter='./packages/*'",
        "dev:apps": "turbo dev --filter='./apps/*'",
        "build:edge-constants": "turbo build:edge-constants --filter=@chat-app/core"
    },
    "devDependencies": {
        "@dotenvx/dotenvx": "^1.45.2",
        "@types/minimatch": "^5.1.2",
        "@types/node": "^24.0.10",
        "eslint": "^9.30.1",
        "prettier": "^3.6.2",
        "tsup": "^8.5.0",
        "turbo": "^2.5.4",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "dotenv": "^17.0.1",
        "zod": "^3.25.67"
    }
}
