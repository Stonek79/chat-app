{
    "name": "@chat-app/socket-server",
    "version": "1.0.0",
    "private": true,
    "main": "dist/server.js",
    "scripts": {
        "build": "dotenvx run -f ../../.env -- tsup src/server.ts --format cjs --clean --external @chat-app/core --external @chat-app/socket-shared --external @chat-app/server-shared",
        "start": "node dist/server.js",
        "dev": "dotenvx run -f ../../.env -- tsx watch src/server.ts",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf dist",
        "lint": "eslint . --ext .ts"
    },
    "dependencies": {
        "@chat-app/core": "workspace:*",
        "@chat-app/db": "workspace:*",
        "@chat-app/media-storage": "workspace:*",
        "@chat-app/server-shared": "workspace:*",
        "@chat-app/socket-shared": "workspace:*",
        "cookie": "^1.0.2",
        "jose": "^6.0.11",
        "socket.io": "^4.8.1",
        "zod": "^4.0.10"
    },
    "devDependencies": {
        "@dotenvx/dotenvx": "^1.48.0",
        "@eslint/js": "^9.31.0",
        "@types/node": "^24.1.0",
        "@typescript-eslint/eslint-plugin": "^8.38.0",
        "@typescript-eslint/parser": "^8.38.0",
        "eslint": "^9.31.0",
        "tsup": "^8.5.0",
        "tsx": "^4.20.0",
        "typescript": "^5.8.0"
    }
}
